<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/porcelain"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/custom_shapes"
    />

    <TextView
        android:id="@+id/textview11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="serif"
        android:text="Donation price amount"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="83dp" />

    <RadioGroup
        android:id="@+id/amountRadioGroup1"
        android:layout_width="383dp"
        android:layout_height="313dp"
        android:layout_marginTop="80dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Select Donation Amount:"
            android:textSize="20sp"
            android:textColor="@color/niagara"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio501"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 SR" />

        <RadioButton
            android:id="@+id/radio1001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 SR" />

        <RadioButton
            android:id="@+id/radio2001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 SR" />

        <RadioButton
            android:id="@+id/radio5001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 SR" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-70dp"
        android:fontFamily="serif"
        android:text="or enter the price manually"
        android:textSize="20dp"
        android:textColor="@color/niagara"/>

    <EditText
        android:id="@+id/edittext33"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-30dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#3B3952"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:text="Continue"
        android:layout_gravity="center" />
</LinearLayout>
